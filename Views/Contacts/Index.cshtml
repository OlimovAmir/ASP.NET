@model Contact  
@{
    ViewData["Title"] = "Обратная связь";
}

<h1>Обратная связь</h1>

<form method="post" asp-controller="Contacts" asp-action="Check">
    <label asp-for="Name" ></label>
    <input asp-for="Name" placeholder="введите имя"/>
    <span asp-validation-for="Name"></span>

    <label asp-for="SureName"></label>
    <input asp-for="SureName" placeholder="введите фамилию"/>
    <span asp-validation-for="SureName"></span>

    <label asp-for="Age"></label>
    <input asp-for="Age" placeholder="введите возраст"/>
    <span asp-validation-for="Age"></span>

    <label asp-for="Email"></label>
    <input asp-for="Email" placeholder="Email"/>
    <span asp-validation-for="Email"></span>

    <label asp-for="Message"></label>
    <input asp-for="Message" />
    <span asp-validation-for="Message"></span>

    <button type="submit">Отправить</button>
</form>
